                            <autogen>--KeyToKey-- KeyCode::COMMA, VK_CONTROL, KeyCode::PAGEUP</autogen>
                            <autogen>--KeyToKey-- KeyCode::DOT,   VK_CONTROL, KeyCode::PAGEDOWN</autogen>
                        </item>
